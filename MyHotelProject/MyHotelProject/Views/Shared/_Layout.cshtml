<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Hotel Template">
    <meta name="keywords" content="Hotel, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>myHotel</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat+Alternates:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/Assets/Client/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/Client/css/style.css" type="text/css">
    <!--js-->
    <script src="/Assets/Client/js/jquery-1.12.4.min.js"></script>
    <script src="/Assets/Client/js/modernizr.custom.js"></script>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <header class="header-section">

        <div class="container-fluid">
            <div class="inner-header">
                <div class="logo">
                    <a href="">myHotel</a>
                </div>
                <div class="nav-right">
                    <a href="/Booking/Index" class="primary-btn">Make a Reservation</a>
                </div>
                <nav class="main-menu mobile-menu">
                    <ul>
                        @{ Html.RenderAction("MainMenu", "Home");}
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    <!-- Hero Area Section Begin -->
    @RenderSection("homewallpaper", required: false)
    <!-- Hero Area Section End -->
    <!-- Search Filter Section Begin -->
    @RenderSection("searchfilter", required: false)
    <!-- Search Filter Section End -->
    @RenderBody()
    <!-- Footer Section Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="footer-item">
                        <div class="footer-logo">
                            <a href="/Home/Index">myHotel</a>
                        </div>
                        <p>
                            Welcome to myHotel.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="footer-item">
                        <h5>Newsletter</h5>
                        <div class="newslatter-form">
                            <input type="text" placeholder="Your Email Here">
                            <button type="submit">Subscribe</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="footer-item">
                        <h5>Contact Info</h5>
                        <ul>
                            <li><img src="/Assets/Client/img/placeholder.png" alt="">Nhóm 8</li>
                            <li><img src="/Assets/Client/img/phone.png" alt="">0842 26 46 86 - 0965 762 752</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <ul>
                            <li class="active"><a href="/Home/Index">Home</a></li>
                            <li><a href="/About/Index">About</a></li>
                            <li><a href="/Booking/Index">Rooms</a></li>
                            <li><a href="#">Facilities</a></li>
                            <li><a href="#">News</a></li>
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
                

            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/Assets/Client/js/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/Client/js/bootstrap.min.js"></script>
    <script src="~/Assets/Client/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Assets/Client/js/jquery-ui.min.js"></script>
    <script src="~/Assets/Client/js/jquery.nice-select.min.js"></script>
    <script src="~/Assets/Client/js/jquery.slicknav.js"></script>
    <script src="~/Assets/Client/js/owl.carousel.min.js"></script>
    <script src="~/Assets/Client/js/main.js"></script>
    @RenderSection("jsFooter", required: false)
</body>

</html>